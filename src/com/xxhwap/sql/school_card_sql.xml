<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
		 "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="com.xxhwap.SchoolCard">
<typeAlias alias="schoolCard" type="com.xxhwap.book.SchoolCardBo"/>
<resultMap class="schoolCard" id="schoolCardMap">
	<result property="id" column="ID"/>
	<result property="cardNo" column="cardNo"/>
	<result property="school" column="school"/>
	<result property="mobile" column="mobile"/>
	<result property="sendTime" column="sendTime"/>
	<result property="openId" column="open_id"/>
	<result property="area" column="area"/>
	<result property="flag" column="flag"/>
</resultMap>
<!--查询-->
<select id='findAllList' resultMap='schoolCardMap'>
SELECT
	id,
	cardNo,
	school,
	mobile,
	sendTime,
	open_id,
	area,
	flag
	FROM
	school_card
	<dynamic prepend="WHERE">
		<isNotEmpty prepend="AND" property="school">
			school = #school#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="cardNo">
			cardNo = #cardNo#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="flag">
			flag = #flag#
		</isNotEmpty>
	</dynamic>

	order by 	sendTime
	<isNotEmpty prepend="limit" property="count">
		#start#,#count#
	</isNotEmpty>
</select>

<select id='findById' resultMap='schoolCardMap'>
SELECT
	id,
	cardNo,
	school,
	mobile,
	sendTime,
	open_id,
	area,
	flag
FROM school_card
	<dynamic prepend="WHERE">
		<isNotEmpty prepend="AND" property="id">
			ID=#id#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="school">
			school = #school#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="cardNo">
			cardNo = #cardNo#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="flag">
			flag = #flag#
		</isNotEmpty>
	</dynamic>
	limit 0,1
</select>
<!--发布book-->
<insert id="add" parameterClass="schoolCard">
	INSERT INTO school_card(
	cardNo,
	school,
	mobile,
	sendTime,
	open_id,
	area,
	flag
)VALUES(
	#cardNo#,
	#school#,
	#mobile#,
	now(),
	#openId#,
	#area#,
	#flag#
	)
	<selectKey resultClass="long" keyProperty="id">
		SELECT @@IDENTITY AS id
	</selectKey>
</insert>

	<select id="getCount" resultClass="java.lang.Integer" parameterClass="java.util.Map">
		SELECT
			count(0)
		FROM school_card
		<dynamic prepend="WHERE">
			<isNotEmpty prepend="AND" property="school">
				school = #school#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="cardNo">
				cardNo = #cardNo#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="flag">
				flag = #flag#
			</isNotEmpty>
		</dynamic>
	</select>

</sqlMap>
